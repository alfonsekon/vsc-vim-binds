// Place your key bindings in this file to override the defaults
[
  // NAVIGATION
  {
    "key": "ctrl+shift+9",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+8",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+j",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "ctrl+shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  // FILE TREE
  {
    "key": "ctrl+e",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // {
  //   "key": "ctrl+shift+e",
  //   "command": "workbench.files.action.focusFilesExplorer",
  //   "when": "editorTextFocus"
  // },
  // {
  //   "key": "ctrl+shift+k",
  //   "command": "workbench.action.replaceInFiles",
  //   "when": "editorTextFocus"
  // },
  // {
  //   "key": "ctrl+shift+k",
  //   "command": "workbench.action.toggleSidebarVisibility"
  // },
  // {
  //   "key": "ctrl+shift+h",
  //   "command": "workbench.action.findInFiles",
  //   "when": "editorTextFocus"
  // },
  // {
  //   "key": "ctrl+shift+h",
  //   "command": "workbench.action.toggleSidebarVisibility"
  // }, 
  {
    "key": "j",
    "command": "list.focusDown",
    "when": "(listFocus && vim.mode != 'Normal') || (!editorFocus && !inputFocus)"
  },
  {
    "key": "k",
    "command": "list.focusUp",
    "when": "(listFocus && vim.mode != 'Normal') || (!editorFocus && !inputFocus)"
  },
  {
    "key": "ctrl+shift+h",
    "command": "search.action.focusSearchList",
    "when": "inputFocus && vim.mode == 'Normal'"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // EXTRA
  {
    "key": "ctrl+shift+5",
    "command": "editor.emmet.action.matchTag"
  },
  {
    "key": "ctrl+z",
    "command": "workbench.action.toggleZenMode"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.closeActiveEditor"
  },
  //LUIS 
  {
    "key": "ctrl+shift+/",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+p", // whatever keybinding
    "command": "workbench.action.decreaseViewSize",
    // "args": {
    //   "commands[
    //     // commands to run in sequence
    //     "workbench.files.action.focusSideBar",
    //     "workbench.action.decreaseViewSize"
    //   ]
    // }
  },
  {
    "key": "ctrl+alt+y", // whatever keybinding
    "command": "workbench.action.increaseViewSize",
    // "args": {
    //   "commands": [
    //     // commands to run in sequence
    //     "workbench.files.action.focusSideBar",
    //     "workbench.action.increaseViewSize"
    //   ]
    // }
  },
  // {
  //     "key": "ctrl+j",
  //     "command": "cursorMove",
  //     "args": {
  //         "to": "nextBlankLine"
  //     },
  //     "when": "editorTextFocus"
  // },
  // {
  //     "key": "ctrl+k",
  //     "command": "cursorMove",
  //     "args": {
  //         "to": "prevBlankLine",
  //     },
  //     "when": "editorTextFocus"
  // },
  {
    "key": "ctrl+j",
    "command": "-workbench.action.togglePanel"
  },
  {
    "key": "ctrl+shift+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+shift+f",
    "command": "-workbench.action.findInFiles"
  },
  {
    "key": "ctrl+shift+k",
    "command": "-editor.action.deleteLines",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+shift+delete",
    "command": "workbench.action.closeWindow"
  },
  {
    "key": "alt+f4",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+w",
    "command": "deleteWordLeft",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "ctrl+backspace",
    "command": "-deleteWordLeft",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "alt+'",
    "command": "workbench.action.toggleMenuBar"
  },
  //================leader key workaround in welcome screen or when no file is open============//
  {
    "key": "space e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "space f",
    "command": "workbench.action.findInFiles",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "space p",
    "command": "workbench.action.quickOpen",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "shift+h",
    "command": "workbench.action.quickOpen",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "space b",
    "command": "workbench.action.files.openFolder",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "space s f",
    "command": "find-it-faster.findFiles",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "space r g",
    "command": "find-it-faster.findWithinFiles",
    "when": "!editorFocus && !inputFocus"
  },
  //========================================until here===========================================//
  {
    "key": "ctrl+alt+c", // Choose your own keybinding
    "command": "workbench.action.openGlobalSettings",
    "args": {
      "query": "codeium.enableCodeLens"
    },
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+k",
    "command": "codeium.openChatView",
    "when": "true"
  },
  {
    "key": "ctrl+shift+a",
    "command": "-codeium.openChatView",
    "when": "true"
  },
  {
    "key": "ctrl+shift+j",
    "command": "-find-it-faster.findFiles"
  },
  {
    "key": "ctrl+u",
    "command": "-cursorUndo",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+alt+u",
    "command": "find-it-faster.findWithinFilesWithType"
  },
  {
    "key": "ctrl+shift+alt+u",
    "command": "-find-it-faster.findWithinFilesWithType"
  },
  {
    "key": "ctrl+shift+u",
    "command": "-find-it-faster.findWithinFiles"
  },
  {
    "key": "ctrl+o",
    "command": "-workbench.action.files.openFile",
    "when": "true"
  },
  {
    "key": "ctrl+o",
    "command": "-workbench.action.files.openFolderViaWorkspace",
    "when": "!openFolderWorkspaceSupport && workbenchState == 'workspace'"
  },
  {
    "key": "ctrl+o",
    "command": "-workbench.action.files.openFileFolder",
    "when": "isMacNative && openFolderWorkspaceSupport"
  },
  {
    "key": "ctrl+o",
    "command": "-workbench.action.files.openLocalFile",
    "when": "remoteFileDialogVisible"
  },
  {
    "key": "shift+r",
    "command": "revealFileInOS",
    "when": "!editorFocus"
  },
  {
    "key": "shift+alt+r",
    "command": "-revealFileInOS",
    "when": "!editorFocus"
  },
  {
    "key": "shift+r",
    "command": "remote-wsl.revealInExplorer",
    "when": "editorFocus && remoteName == 'wsl'"
  },
  {
    "key": "shift+alt+r",
    "command": "-remote-wsl.revealInExplorer",
    "when": "editorFocus && remoteName == 'wsl'"
  },
  {
    "key": "ctrl+y",
    "command": "acceptSelectedSuggestion",
    "when": "acceptSuggestionOnEnter && suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && suggestionMakesTextEdit && textInputFocus"
  },
  {
    "key": "tab",
    "command": "-acceptSelectedSuggestion",
    "when": "suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "enter",
    "command": "-acceptSelectedSuggestion",
    "when": "acceptSuggestionOnEnter && suggestWidgetHasFocusedSuggestion && suggestWidgetVisible && suggestionMakesTextEdit && textInputFocus"
  }
]